@model LanguageSelectorModel
@inject IWebHelper webHelper

 <script>
        var selectedLang = '@Model.AvailableLanguages.Where(ln=>@Model.CurrentLanguageId == ln.Id).Select( ln => ln.Name).FirstOrDefault()'
        var langurls = @Json.Serialize(Model.AvailableLanguages.OrderBy(lang => lang.DisplayOrder).Select( lang =>  Url.RouteUrl("ChangeLanguage", new {langid = lang.Id})).ToList())   
        var langnames = @Json.Serialize(Model.AvailableLanguages.OrderBy(lang => lang.DisplayOrder).Select(ln => ln.Name).ToList())
</script>